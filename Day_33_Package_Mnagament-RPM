------------------------------------------------------------------------------


# if ihave uninstalled package and want to 
# know the files will be created after 
# installing it


[ command : rpm -qpl pkg-path ]


if pkg installed

[ command : rpm -ql pkg-name ]
----------------------------------------------------------------------------

 # see config-files will be created after installation 

[ command : rpm -qc pkg-name ]


[root@redhat ~]# rpm -qc at
/etc/at.deny
/etc/pam.d/atd
/etc/sysconfig/atd




[root@redhat ~]# rpm -qc tuned

/etc/tuned/active_profile
/etc/tuned/bootcmdline
/etc/tuned/post_loaded_profile
/etc/tuned/profile_mode
/etc/tuned/tuned-main.conf

